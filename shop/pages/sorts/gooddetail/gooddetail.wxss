/* pages/sorts/gooddetail/gooddetail.wxss */
@import "../../banner/iconfont.wxss";
page{
  background-color: #F8F8FF ;
  padding-bottom: 8vh;
}
.center{
  display: flex;
  flex-direction: column;
  z-index: 1;
}
.banner{
  /* width: 100%; */
  height: 80vw;
  background-color:white;
}
.banner swiper{
   height: 80vw;
   text-align: center;
}
.banner image{
 width: 80%;
 height: 80%;
}
.goodsinfo{
  display: flex;
  flex-direction: row;
  background-color:white;
  height: 10vh;
  width: 100%;
  align-items: center;
}
.detailprice{
  color:red; 
  font-weight: bold;
  margin-left:3%;
  font-size:50rpx;
}

.goodname{
  flex:8;
  margin-left:3%; 
  border-right:2px solid gray;
  height: 80%;
}
.shoucang{
  flex: 2;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.shoucang image{
  width: 50rpx;
  height: 50rpx;
}
.tuweng{
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}
.title{
  color: red;
  border-bottom: 4rpx solid gray;
  height: 5vh;
  background-color: white;
  align-items: center;
  display: flex;
  /* margin-left: 3%; */
  /* margin-bottom:5% ; */
}
.tools{
  display: flex;
  position: fixed;
  height: 8vh;
  width: 100%;
  background-color:white;
  z-index: 999;
  margin-top:92vh;
  align-items: center;
  border-top: 1rpx solid gray;
}
.tool_obj{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 25rpx;
  position: relative;
}
.tool_obj button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.addsort{
  display: flex;
  flex: 2;
  height: 80%;
  background-color: #407E98;
  color: white;
  border-radius: 40rpx;
  justify-content: center;
  align-items: center;
  margin-right: 2%;
}
.xiaohongdian{
  position: absolute;
  color: white;
   background-color: red;
   height: 30rpx;
   width: 30rpx;
   right: 0rpx;
   top: -10rpx;
   border-radius: 50%;
   font-size: 25rpx;
   text-align: center;
}
.buy{
  display: flex;
  flex: 2;
  background-color: red;
  color: white;
  justify-content: center;
  align-items: center;
}
.anchor{
 position: fixed;
 height: 100rpx;
 width:100rpx;
 background-color: rgb(174, 169, 169);
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 border-radius: 50%;
 margin-top:80vh;
 margin-left: 10vw;
 opacity: 0.7;
}